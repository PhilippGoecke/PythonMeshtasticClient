MESHTASTIC_SERIAL=/dev/ttyUSB0          # Or set MESHTASTIC_HOST=hostname:port for TCP
MESHTASTIC_REGION=EU_868                # Examples: UNSET, US, EU_868, EU_433, CN, JP, ANZ, ANZ_433, KR, TW, RU, IN, NZ_865, TH, UA_433, UA_868, MY_433, MY_919, SG_923, NP_865, LORA_24
MESHTASTIC_OWNER_LONG=Alice Base
MESHTASTIC_OWNER_SHORT=ALC
MESHTASTIC_DEVICE_ROLE=CLIENT           # CLIENT, CLIENT_MUTE, ROUTER, REPEATER, TRACKER, SENSOR
MESHTASTIC_POSITION_BROADCAST=true
MESHTASTIC_CHANNEL_NAME=MyMesh
MESHTASTIC_CHANNEL_PSK=random           # Or a 16-char passphrase, or a base64 key
MESHTASTIC_CHANNEL_INDEX=0
MESHTASTIC_WIFI_SSID=MyWiFi             # Optional (ESP32 class devices)
MESHTASTIC_WIFI_PSK=SuperSecret123
MESHTASTIC_VERBOSE=1                    # Set 1 for debug logging
